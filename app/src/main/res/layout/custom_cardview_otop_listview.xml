<?xml version="1.0" encoding="utf-8"?>



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame1"
            android:layout_marginBottom="20dp"
            >


            <ImageView
                android:id="@+id/itemimage"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:id="@+id/txtname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Product Name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/itemimage"
                android:textColor="#000000"
                />


            <TextView
                android:id="@+id/province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Province :"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txtprice"
                android:layout_toRightOf="@+id/itemimage"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/txtprovince"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Malabon"
                android:textSize="10dp"
                android:textColor="#a8e4ff"
                android:textStyle="bold"
                android:layout_below="@+id/txtprice"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/province"

                />


            <TextView
                android:id="@+id/brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand :"
                android:textSize="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_below="@+id/province"
                android:layout_toRightOf="@+id/itemimage"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/txtbrand"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Brand"
                android:textSize="10dp"
                android:textColor="#a8e4ff"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/province"
                android:layout_toRightOf="@+id/province"

                />

            <TextView
                android:id="@+id/Inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inventory :"
                android:textSize="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_below="@+id/brand"
                android:layout_toRightOf="@+id/itemimage"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/txtinventory"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="10dp"
                android:textColor="#a8e4ff"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/brand"
                android:layout_toRightOf="@+id/province"

                />

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/itemimage"
                android:layout_below="@+id/Inventory"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/txtrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="#a8e4ff"
                android:layout_marginLeft="67dp"
                android:layout_toRightOf="@+id/rating"
                android:layout_below="@+id/txtinventory"
                />

            <TextView
                android:id="@+id/txtprice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#a8e4ff"
                android:text="100.00"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@+id/txtname"
                android:layout_toRightOf="@+id/itemimage"

                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>









