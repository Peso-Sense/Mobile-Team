<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >



    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:id="@+id/frame1"
            android:layout_marginBottom="20dp"
            >


            <ImageView
                android:id="@+id/itemimage"
                android:layout_width="110dp"
                android:layout_height="120dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                />

            <TextView
                android:id="@+id/txtname"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="Product Name"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/itemimage"
                android:textColor="#000000"
                />


            <TextView
                android:id="@+id/province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Province :"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txtprice"
                android:layout_toRightOf="@+id/itemimage"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/txtprovince"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="Malabon"
                android:textSize="10dp"
                android:textColor="#a8e4ff"
                android:textStyle="bold"
                android:layout_below="@+id/txtprice"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@+id/province"

                />


            <TextView
                android:id="@+id/brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brand :"
                android:textSize="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_below="@+id/province"
                android:layout_toRightOf="@+id/itemimage"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/txtbrand"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Brand"
                android:textSize="10dp"
                android:textColor="#a8e4ff"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/province"
                android:layout_toRightOf="@+id/province"

                />

            <TextView
                android:id="@+id/Inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inventory :"
                android:textSize="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_below="@+id/brand"
                android:layout_toRightOf="@+id/itemimage"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/txtinventory"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="10dp"
                android:textColor="#a8e4ff"
                android:textStyle="bold"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/brand"
                android:layout_toRightOf="@+id/province"

                />

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/itemimage"
                android:layout_below="@+id/Inventory"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/txtrating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="10dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="#a8e4ff"
                android:layout_marginLeft="67dp"
                android:layout_toRightOf="@+id/rating"
                android:layout_below="@+id/txtinventory" />

            <TextView
                android:id="@+id/txtprice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#a8e4ff"
                android:text="100.00"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_below="@+id/txtname"
                android:layout_toRightOf="@+id/itemimage"

                />

            <Button
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/itemimage"
                android:gravity="center"
                android:layout_toRightOf="@+id/itemimage"
                android:text="INQUIRE"
                android:textColor="#FFFFFF"
                android:background="#63ceee"
                android:id="@+id/btninquire"
                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv2"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/card_view"
        />




    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_viewdesc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:layout_below="@id/rv2"
        >

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ITEM DESCRIPTION :"
            android:id="@+id/desc"
            android:textColor="#000000"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCRIPTIONS"
            android:id="@+id/txtdesc"
            android:layout_below="@+id/desc"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            />

       </RelativeLayout>

    </android.support.v7.widget.CardView>










</RelativeLayout>
</ScrollView>