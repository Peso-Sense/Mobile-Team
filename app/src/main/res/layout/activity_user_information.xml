<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:scrollbars="none"
    tools:context="com.example.mobile1.mypesoesense.SignUpMoreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:background="#000"
            android:src="@drawable/addimagesmnew" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblLName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Last Name:"
                    android:textColor="@color/navtext_active" />

                <EditText
                    android:id="@+id/txtLName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fields_bg"
                    android:hint="Last Name"
                    android:padding="8dp"
                    android:textColor="@color/navtext_active" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblFName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="First Name:"
                    android:textColor="@color/navtext_active" />

                <EditText
                    android:id="@+id/txtFName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fields_bg"
                    android:hint="First Name"
                    android:padding="8dp"
                    android:textColor="@color/navtext_active" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblMName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Middle Name:"
                    android:textColor="@color/navtext_active" />

                <EditText
                    android:id="@+id/txtMName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fields_bg"
                    android:hint="Middle Name"
                    android:padding="8dp"
                    android:textColor="@color/navtext_active" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblGender"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    android:textColor="@color/navtext_active" />

                <Spinner
                    android:id="@+id/spinnerGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/spinner_bg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblBirthday"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Birthday:"
                    android:textColor="@color/navtext_active" />

                <EditText
                    android:id="@+id/txtBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fields_bg"
                    android:clickable="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Middle Name"
                    android:padding="8dp"
                    android:textColor="@color/navtext_active" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblAddress"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textColor="@color/navtext_active" />

                <EditText
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/fields_bg"
                    android:gravity="top|left"
                    android:hint="Address"
                    android:inputType="textMultiLine"
                    android:lines="3"
                    android:maxLines="6"
                    android:padding="8dp"
                    android:textColor="@color/navtext_active" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_blue"
            android:text="Save"
            android:textColor="@color/navtext_active"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_blue"
            android:text="Edit"
            android:textColor="@color/navtext_active"
            android:visibility="gone" />

    </LinearLayout>


</ScrollView>
